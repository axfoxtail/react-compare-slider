  "main": "dist/index.js",
  "module": "dist/react-compare-slider.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "release": "np",
    "test": "tsdx test --env=jsdom",
    "test:watch": "yarn test --coverage --watch",
    "lint": "tsdx lint",
    "lint-staged": "lint-staged"
  },
  "peerDependencies": {
    "react": ">=16.8",
    "react-dom": ">=16.8"
  },
  "np": {
